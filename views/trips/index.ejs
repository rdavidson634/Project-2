<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/style.css">
    <title>Trips</title>
</head>
<body>
    <nav class="navbar">
        <ul>
            <li><a href="/trips">Golf Trips</a></li>
            <li><a href="/new">Add New Trip</a></li>
            <li><a href="">Course Details</a></li>
            
            <li>
                <% if (user) { %>
                <a href="/logout" class="material-icons left">Log Out</a>
                <% } else { %>
                <a href="/auth/google" class="material-icons left">Login with Google</a>
                <% } %>
            </li>
              
        </ul>
    </nav>
    <br>
    <br>
    <br>
    <table style="width: 100%">
      <tr class="row-header">
          <th class="col-1">On deck Golf Trips</th>
          <th class="col-2">Details</th>
      </tr>
    
        <tr class="row">
        <% trips.forEach(function(trip) { %>
          <td class="data-1"><%= trip.location %></td>
          <td class="data-2"><a href="/trips/<%=trip._id%>">Trip Details</a></td>
          <td class="col-*-*"></td>
        </tr>
        <% }) %>
    </table>
    
</body>
</html>